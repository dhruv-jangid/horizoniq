{
  "name": "horizoniq",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "clean": "rm -rf apps/web/node_modules apps/web/.turbo apps/web/.vercel .turbo bun.lock node_modules",
    "in": "bun i --latest && bun update --latest && turbo in -F web"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "turbo": "^2.7.4",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": ["apps/*", "packages/*"]
}
